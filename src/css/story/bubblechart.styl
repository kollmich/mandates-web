
#bubblechart
    margin 0 auto
    margin-top .5rem
    margin-bottom 1rem
    width $column-width
    +mq('bp-4')
        margin-top 1rem
        width $column-width-wide
        max-width $column-width-max


    h3
        font-family $sans
        font-size 16px
        text-decoration underline

    .heading
        font-family $akkurat
        font-size 15px
        font-weight 800
        opacity 1
        fill $blue
        +mq('bp-4')
            font-size 20px

    .subheading
        font-family $sans
        font-size 12px
        font-weight 400
        fill $off-black
        +mq('bp-4')
            font-size 14px

    .source
        font-family $akkurat
        font-size 10px
        font-weight 800
        fill $gray
        +mq('bp-4')
            font-size 11px

    .brand
        font-family $sans
        font-size 13px
        font-weight 400
        fill $gray


    .axis
        shape-rendering: crispEdges;
        // opacity 0.5

        path
            stroke none
            opacity 0.7

        line
            stroke $gray-light
            opacity 0.7

        text
            font-family $akkurat
            font-size 10.5px
            fill $gray-dark
            +mq('bp-4')
                font-size 11.5px

        .tick
            line
                fill $gray-light
                opacity 0.25
    
        .axis--x
            line
                stroke white
                stroke-width 0px

    .approval_text
        text-transform uppercase
        font-weight 400
        font-size 9px
        font-family $sans-fb
        color white

.tooltip
    h3
        font-size 15px
        font-family $sans-fb
        color $gray-dark
        // text-decoration underline
        margin 10px 0 5px 0
        font-weight 600

    .bio_popularity, .bio
        // margin 10px
        padding 5px
        font-size 11px
        font-family $sans-fb
        font-weight 400
        margin 0
        line-heigh 0.5
        // color $gray-dark

    .bio_popularity
        display inline
        margin-bottom 10px


.prose__hed
    width $column-width
    margin 0 auto
    color $gray
    +mq('bp-4')
        max-width $column-width-max

.prose_body
        // width $column-width
        margin 0 auto
        font-size 14px
        font-weight 200
        color $off-black
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale       
        text-align justify         
        +mq('bp-4')


#bubblechart
    margin 0 auto
    margin-top .5rem
    margin-bottom 1rem
    width $column-width
    +mq('bp-4')
        margin-top 1rem
        width $column-width-wide
        max-width $column-width-max


    h3
        font-family $sans
        font-size 16px
        text-decoration underline

    .heading
        font-family $akkurat
        font-size 15px
        font-weight 800
        opacity 1
        fill $blue
        +mq('bp-4')
            font-size 20px

    .subheading
        font-family $sans
        font-size 12px
        font-weight 400
        fill $off-black
        +mq('bp-4')
            font-size 14px

    .source
        font-family $akkurat
        font-size 10px
        font-weight 800
        fill $gray
        +mq('bp-4')
            font-size 11px

    .brand
        font-family $sans
        font-size 13px
        font-weight 400
        fill $gray


    .axis
        shape-rendering: crispEdges;
        // opacity 0.5

        path
            stroke none
            opacity 0.7

        line
            stroke $gray-light
            opacity 0.7

        text
            font-family $akkurat
            font-size 10.5px
            fill $gray-dark
            +mq('bp-4')
                font-size 11.5px

        .tick
            line
                fill $gray-light
                opacity 0.25
    
        .axis--x
            line
                stroke white
                stroke-width 0px

    .approval_text
        text-transform uppercase
        font-weight 400
        font-size 9px
        font-family $sans-fb
        color white


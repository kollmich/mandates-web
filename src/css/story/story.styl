/* CUSTOM STORY STYLE */
.section
    &__hed
        max-width $column-width
        margin 0 auto
        font-size 24px
        font-family $serif
        font-weight 200
        color $dark-gray
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale       
        text-align justify 
        +mq('bp-4')
            width $column-width-wide
            max-width 700px

#social__buttons
    margin 0 auto
    margin-top .5rem
    margin-bottom 1rem
    width $column-width
    +mq('bp-4')
        margin-top 1rem
        width $column-width-wide
        max-width $column-width-max

    button
        font-size 10px
        font-weight 800
        border-radius: 4px
        padding 3px 6px
        border solid 1px $blue
        transition-timing-function: ease-in;
        transition: .3s;
        float right

    button:hover
        font-size 10px
        background-color: $blue
        color white

    .fb-share-button, .twitter-share-button
        float right
        margin-left 10px
        font-size 10px
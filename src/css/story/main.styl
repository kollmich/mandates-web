#main
    margin 0 auto
    margin-top 1.5rem
    margin-bottom 1rem
    width $column-width
    +mq('bp-4')
        margin-top 3rem
        width $column-width-wide
        max-width $column-width-max

    h3
        font-family $akkurat
        font-size 14px
        text-decoration underline
        margin-bottom 4px

    .heading
        font-family $akkurat
        font-size 15px
        font-weight 800
        opacity 1
        fill $blue
        +mq('bp-4')
            font-size 20px

    .subheading
        font-family $sans
        font-size 12px
        font-weight 400
        fill $off-black
        +mq('bp-4')
            font-size 14px

    .source
        font-family $akkurat
        font-size 10px
        font-weight 800
        fill $gray
        +mq('bp-4')
            font-size 11px

    .brand
        font-family $sans
        font-size 13px
        font-weight 400
        fill $gray

    .axis path
        stroke $gray-light
        opacity 0.7

    .axis line
        stroke $gray-light
        opacity 0.7

    .axis text
        font-family $akkurat
        font-size 10.5px
        fill $gray-dark
        +mq('bp-4')
            font-size 11.5px



    .graphic__parties
        //width 50%
        // height 100px
        display flex
        flex-flow row wrap
        // border-top 1px solid $gray
        // border-bottom 1px solid $gray
        justify-content flex-start
        align-content flex-end
        // margin 0 5px
        // padding 5px 0

        .party
            // border-top 1px solid $gray
            // border-bottom 1px solid $gray
            padding 5px 15px
            text-align: center
            flex-grow 0

            p
                font-size 12px
                margin 0 auto
                font-weight 600
                font-family $sans-fb

    .datetime
        font-size 14px
        font-family $sans-fb



.prose__hed
    width $column-width
    margin 0 auto
    color $gray
    +mq('bp-4')
        max-width $column-width-max

.prose_body
        // width $column-width
        margin 0 auto
        font-size 14px
        font-weight 200
        color $off-black
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale       
        text-align justify         
